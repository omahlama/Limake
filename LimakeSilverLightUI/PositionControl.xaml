<UserControl x:Class="LimakeSilverLightUI.PositionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40" d:DesignWidth="40">

    <Canvas Width="40" Height="40" x:Name="mainCanvas">
        <Ellipse Width="40" Height="20" Canvas.Top="10" Canvas.Left="0" Stroke="Black" StrokeThickness="2">
            <Ellipse.Fill>
                <SolidColorBrush Color="{Binding Color}" />
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="{Binding Name}" Canvas.Top="0" Canvas.Left="0" Visibility="Collapsed"/>
    </Canvas>
</UserControl>
